<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/beige"
        tools:context=".activity.LoginActivity">

        <ImageView
            android:id="@+id/mainLogoImageView"
            android:layout_width="184.5dp"
            android:layout_height="45dp"
            android:layout_marginTop="42dp"
            android:contentDescription="@string/main_logo_content_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_home" />

        <TextView
            android:id="@+id/mainWelcomeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="44dp"
            android:contentDescription="@string/main_welcome_content_description"
            android:text="@string/main_welcome_content_description"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/charcoal_grey"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainLogoImageView" />

        <TextView
            android:id="@+id/mainPresentationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="44dp"
            android:text="@string/main_presentation"
            android:textAlignment="center"
            android:textColor="@color/charcoal_grey"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainWelcomeTextView" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mainEmailTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="44dp"
            android:textColorHint="@color/grey"
            app:errorTextColor="@color/neon_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainPresentationTextView"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/neon_red">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mainEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige"
                android:fontFamily="sans-serif"
                android:hint="@string/main_email"
                android:inputType="textEmailAddress"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3.5sp"
                android:textColor="@color/grey"
                android:textSize="17sp"
                android:textStyle="normal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mainPasswordTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="44dp"
            android:textColorHint="@color/grey"
            app:endIconMode="password_toggle"
            app:errorTextColor="@color/neon_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainEmailTextInputLayout"
            app:startIconDrawable="@drawable/ic_padlock"
            app:startIconTint="@color/neon_red">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mainPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige"
                android:fontFamily="sans-serif"
                android:hint="@string/main_password"
                android:inputType="numberPassword"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3.5sp"
                android:textColor="@color/grey"
                android:textSize="17sp"
                android:textStyle="normal"
                app:textInputLayoutFocusedRectEnabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/mainLoginButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="44dp"
            android:backgroundTint="@color/blue"
            android:text="@string/main_login"
            app:cornerRadius="@dimen/radius_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainPasswordTextInputLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>